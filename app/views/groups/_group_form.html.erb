<%= form_for group do |f| %>
  Name: <%= f.text_field :name %>
  Description: <%= f.text_area :description%>
  <%= image_tag url_for(group.image), class: 'group-banner' if group.image.attached? %><br />
  Image: <%= f.file_field :image %>
  <%= f.submit %>
<% end %>
<%= link_to 'Delete Account', user_path(current_user), method: 'delete', class: 'dropdown-item' %>
