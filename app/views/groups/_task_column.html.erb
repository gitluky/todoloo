<%= tag.div class: div_class do %>
  <%= tasks_category_title(title, tasks) %>
  <% tasks.each do |task| %>
    <%= tag.div class: 'card mb-2' do %>
      <%= tag.div class: 'card-body' do %>
        <%= tag.h5 class: 'card-title' do %>
          <%= task.name %><br />
        <% end %>
        <%= tag.div class: 'card-text' do %>
          <%= task.description %><br />
          Created by: <%= task.creator_user_email %>
          <%= tag.ul class: 'nav justify-content-center' do %>
            <%= display_assignment_links(task) %>
            <%= link_to 'View Task', task_path(task), class: 'nav-item nav-link px-1' %>
            <%= tag.li class: "nav-item dropdown" do %>
              <%= tag.a class: "nav-link dropdown-toggle px-2", data: { toggle: "dropdown" }, href: edit_path, role: "button", aria: { haspopup: "true", expanded: false } do %><%= dropdown_name %><% end %>
              <%= tag.div class: "dropdown-menu" do %>
                <%= form_for([group, task], html: { class: 'form-group' }) do |f| %>
                  <%= tag.div class: 'form-group' do %>
                    Name: <%= f.text_field :name, class: 'form-control' %>
                  <% end %>
                  <%= tag.div class: 'form-group' do %>
                    Description: <%= f.text_area :description, class: 'form-control' %>
                  <% end %>
                  <%= tag.div class: 'form-group' do %>
                    Assign to (optional): <%= f.collection_select(:assigned_to_id, members, :id, :email, include_blank: true, html_options: { class: 'form-control'}) %>
                  <% end %>
                  <%=f.submit button_name %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
