<%= display_avatar(@user, "large") %><br />
<%= @user.name %>
<%= link_to 'Edit', edit_user_path(@user) %>
<%= link_to 'Delete Account', user_path(@user), method: 'delete'%>

<%= @invitations.each do |invitation| %>
  You're have been invited to: <%= invitation.group_id %><br />
  Sent By: <%= invitation.sender_id %><br />

  <%= form_for invitation, method: delete do |f| %>
    <%= f.hidden_field :accept, value: 'true' %>
    <%= f.submit 'Accept'%>
  <% end %>

  <%= form_for invitation, method: :delete do |f| %>
    <%= f.submit 'Decline'%>
  <% end %>

<% end %>

<%= @groups.each do |group| %>
  <%= link_to group.name, group_path(group) %>
<% end %>
