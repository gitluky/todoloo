<%= tag.div class: 'containter text-center' do %>

  <%= tag.div class: 'mt-5' do %>
    <% user.errors.full_messages.each do |message| %>
      <%= tag.li message, class: 'text-danger' %>
    <% end %>
  <% end %>

  <%= form_for user do |f| %>

    <%= tag.div class: 'mt-5' do %>
      <%= display_avatar(user, 'large') %><br />
    <% end %>

    <%= tag.div class: 'mr-5 mt-5' do %>
      <%= tag.div class: 'form-group row justify-content-center' do %>
        <%= f.label :username, class: 'col-sm-1 col-form-label' %>
        <%= tag.div class: "col-sm-4" do %>
          <%= f.text_field :name, class: 'form-control' %>
        <% end %>
      <% end %>

      <% if user.provider.nil? %>

        <%= tag.div class: 'form-group row justify-content-center' do %>
          <%= f.label 'Email', class: 'col-sm-1 col-form-label' %>
          <%= tag.div class: "col-sm-4" do %>
            <%= f.email_field :email, class: 'form-control'  %>
          <% end %>
        <% end %>

        <%= tag.div class: 'form-group row justify-content-center' do %>
          <%= f.label 'Avatar', class: 'col-sm-1 col-form-label' %>
          <%= tag.div class: "col-sm-4" do %>
            <%= f.file_field :avatar, class: 'form-control'  %>
          <% end %>
        <% end %>

        <%= tag.div class: 'form-group row justify-content-center' do %>
          <%= f.label 'Password', class: 'col-sm-1 col-form-label' %>
          <%= tag.div class: "col-sm-4" do %>
            <%= f.password_field :password, class: 'form-control'  %>
          <% end %>
        <% end %>

        <%= tag.div class: 'form-group row justify-content-center' do %>
          <%= f.label 'Confirm Password', class: 'col-sm-1 col-form-label' %>
          <%= tag.div class: "col-sm-4" do %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          <% end %>
        <% end %>

      <% end %>
    <% end %>

    <%= f.submit button_name, class: 'btn btn-primary' %>

  <% end %>
  <% if !user.new_record? %>
    <%= link_to 'Delete Account', user_path(user), method: 'delete', class: 'btn btn-danger mt-2', data: { confirm: 'Are you sure you want to delete your account?'} %>
  <% end %>
<% end %>
