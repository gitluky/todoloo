<%= tag.div class: 'containter text-center' do %>
  <%= form_for user do |f| %>
    <%= display_avatar(user, 'large') %><br />
    Username: <%= f.text_field :name, class: 'mt-3' %><br />
    <% if user.provider.nil? %>
      Email: <%= f.email_field :email, class: 'mt-3'  %><br />
      Change Avatar: <%= f.file_field :avatar, class: 'mt-3'  %><br />
      Password: <%= f.password_field :password, class: 'mt-3'  %><br />
      Confirm Password: <%= f.password_field :password_confirmation, class: 'mt-3'  %><br />
    <% end %>
    <%= f.submit button_name, class: 'btn btn-primary mt-3'  %>
  <% end %>
  <% if !user.new_record? %>
    <%= link_to 'Delete Account', user_path(user), method: 'delete', class: 'btn btn-danger mt-2', data: { confirm: 'Are you sure you want to delete your account?'} %>
  <% end %>
<% end %>
