<% if !@invitation.errors.empty? %>
  <% @invitation.errors.full_messages.each do |message| %>
    <div>
      <%= message %>
      </div>
  <% end %>
<% end %>

<%= form_for([@group, @invitation]) do |f| %>
  <%= f.text_field :recipient_email %>
  <%= f.submit 'Send Invite'%>
<% end %>
