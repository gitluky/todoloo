
<%= tag.div class: 'container-fluid' do %>
  <%= tag.div class: 'row justify-content-center' do %>
    Invitations:
  <% end %>
  <%= tag.div class: 'row justify-content-center' do %>

    <% @invitations.each do |invitation| %>
      <%= tag.div class: 'card mx-1' do %>
        <%= tag.div class: 'card-body' do %>
          <%= tag.small class: 'my-0 text-muted' do %>
            You have been invited to:
          <% end %>

          <%= tag.h4 class: 'card-title text-center mb-0' do %>
            <%=invitation.group.name %><br />
          <% end %>

          <%= tag.small class: 'text-muted' do %>
            Sent By: <%= invitation.sender.name %>
          <% end %>

          <%= tag.div class: 'row justify-content-center mt-2' do %>
            <%= form_for([@user, invitation], method: :delete) do |f| %>
              <%= f.hidden_field :accept, value: 'true' %>
              <%= f.submit 'Accept'%>
            <% end %>

            <%= form_for([@user, invitation], method: :delete) do |f| %>
              <%= f.submit 'Decline'%><br />
            <% end %>

          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <% @groups.each do |group| %>
    <%= tag.div class: 'row text-center mt-4 justify-content-center' do %>
      <%= tag.div class:'col-lg-8' do %>
        <% group.recent_announcements.each do |announcement| %>

          <%= tag.h4 class: 'text-center' do %>
            <%= group.name %>
          <% end %>

          <%= tag.div class:'card mb-2' do %>
            <%= tag.div class: 'card-body' do %>
              <%= announcement.title %>
              <%= announcement.content %>
            <% end %>
            <%= tag.div class: 'card-footer' do %>
              <%= tag.small class: 'text-muted' do %>
                <%= announcement.user.email if announcement.user %> @
                <%= announcement.updated_at.strftime('%B, %d, %Y') %>
              <% end %>
            <% end %>
          <% end %>

          <%= tag.div class: 'row' do %>
            <%= render partial: 'groups/task_column', locals: { edit_path: edit_task_path(group), group: group, tasks: group.tasks_assigned_to_user(current_user), members: group.users, dropdown_name: 'Edit', button_name: 'Update', title: 'My Assigned Tasks' } %>
          <% end %>

        <% end %>
      <% end %>
    <% end %>
  <% end %>









<% end %>
