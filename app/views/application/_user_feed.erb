<%= tag.div class: 'container-fluid' do %>
  <%= tag.div class: 'row justify-content-center' do %>
    <%= link_to "Create Group", new_group_path, class: 'btn btn-primary mt-4' %>
  <% end %>
  <%= tag.div class: 'row justify-content-center' do %>
    <%= tag.p 'Invitations' if !@invitations.empty? %>
  <% end %>
  <%= tag.div class: 'row justify-content-center' do %>

    <% @invitations.each do |invitation| %>
      <%= tag.div class: 'card mx-1 text-center' do %>
        <%= tag.div class: 'card-body' do %>
          <%= tag.small class: 'my-0 text-muted' do %>
            You have been invited to:
          <% end %>

          <%= tag.h4 class: 'card-title text-center mb-0' do %>
            <%=invitation.group.name %><br />
          <% end %>

          <%= tag.small class: 'text-muted ' do %>
            Sent By: <%= invitation.sender.name %>
          <% end %>

          <%= tag.div class: 'row justify-content-center mt-2' do %>
            <%= form_for([@user, invitation], method: :delete) do |f| %>
              <%= f.hidden_field :accept, value: 'true' %>
              <%= f.submit 'Accept'%>
            <% end %>

            <%= form_for([@user, invitation], method: :delete) do |f| %>
              <%= f.hidden_field :accept, value: 'false' %>
              <%= f.submit 'Decline'%><br />
            <% end %>

          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <% @groups.each do |group| %>
    <%= tag.div class: 'row text-center mt-3 justify-content-center' do %>
      <%= tag.div class:'col-lg-8 text-center' do %>
      <%= tag.div class: 'card justify-content-center' do %>
        <%= tag.h3 group.name, class: 'mt-5 user-feed-group-bg' %>
        <%= tag.small class: 'mt-2' do %>
          <%= link_to 'View Group', group_path(group), class: 'ml-2' %>
        <% end %>
      <% end %>

        <%= tag.div class: 'card mb-3' do %>
          <% group.recent_announcements.each do |announcement| %>

            <%= tag.div class:'card mb-2' do %>
              <%= tag.div class: 'card-body' do %>
                <%= tag.h5 announcement.title %>
                <%= announcement.content %>
              <% end %>
              <%= tag.div class: 'card-footer' do %>
                <%= tag.small class: 'text-muted' do %>
                  <%= announcement.user.name if announcement.user %> @
                  <%= announcement.updated_at.strftime('%B, %d, %Y') %>
                <% end %>
              <% end %>
            <% end %>

          <% end %>

          <%= tag.div class: 'row justify-content-center' do %>
            <%= render partial: 'groups/task_column', locals: { edit_path: edit_task_path(group), group: group, tasks: group.tasks_assigned_to_user(current_user), members: group.users, dropdown_name: 'Edit', button_name: 'Update', title: 'My Assigned Tasks', div_class: 'col-lg-3' } %>
          <% end %>

        <% end %>
      <% end %>
    <% end %>
  <% end %>









<% end %>
